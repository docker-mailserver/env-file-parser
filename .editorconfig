# -----------------------------------------------
# --- General -----------------------------------
# --- https://editorconfig.org ------------------
# -----------------------------------------------

root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_style             = space
tab_width                = 4
insert_final_newline     = true
trim_trailing_whitespace = true

# -----------------------------------------------
# --- Rust --------------------------------------
# -----------------------------------------------

[*.rs]
indent_style             = tab

[Makefile]
indent_style             = tab

# -----------------------------------------------
# --- YAML --------------------------------------
# -----------------------------------------------

[*.{yml,yaml}]
indent_style             = space
indent_size              = 2

# -----------------------------------------------
# ----  Shell (Bash)  ---------------------------
# -----------------------------------------------

[*.sh]
indent_style             = space
indent_size              = 2

shell_variant            = bash
binary_next_line         = true
switch_case_indent       = true
space_redirects          = false
keep_padding             = false
function_next_line       = true
