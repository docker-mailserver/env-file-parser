# -----------------------------------------------
# --- General -----------------------------------
# --- https://editorconfig.org ------------------
# -----------------------------------------------

root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_style             = space
tab_width                = 4
insert_final_newline     = true
trim_trailing_whitespace = true

# -----------------------------------------------
# --- Rust --------------------------------------
# -----------------------------------------------

[*.rs]
indent_style             = tab

# -----------------------------------------------
# --- YAML --------------------------------------
# -----------------------------------------------

[*.{yml,yaml,json,jsonc}]
indent_style             = space
indent_size              = 2
